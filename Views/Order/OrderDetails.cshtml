@model Bookstore.Models.Order

<h2>Order Details</h2>

<p>Order ID: @Model.Id</p>
<p>Order Date: @Model.OrderDate.ToString("yyyy-MM-dd HH:mm")</p>
<p>Total Amount: $@Model.TotalAmount</p>
<p>Status: @Model.Status</p>

<h3>Order Items</h3>
<table class="table">
    <thead>
        <tr>
            <th>Book Title</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderItems)
        {
            <tr>
                <td>@(item.Book?.Title ?? "Unknown Title")</td> <!-- Use null-coalescing to handle null -->
                <td>@(item.Book?.Price.ToString("C") ?? "N/A")</td> <!-- Format price safely -->
                <td>@item.Quantity</td>
                <td>@(item.Book != null ? (item.Book.Price * item.Quantity).ToString("C") : "N/A")</td> <!-- Handle null for Total -->
            </tr>
        }
    </tbody>
</table>
