@model Bookstore.Models.Order
@{
    ViewData["Title"] = "Order Confirmation";
}

<h2>Order Confirmation</h2>

@if (Model == null)
{
    <p>Order not found.</p>
}
else
{
    <p>Thank you for your purchase! Your order ID is <strong>@Model.Id</strong>.</p>
    <p>Order Date: @Model.OrderDate.ToString("yyyy-MM-dd HH:mm")</p>
    <p>Total Amount: <strong>$@Model.TotalAmount</strong></p>

    <h3>Shipping Details</h3>
    <p>Name: @Model.ShippingName</p>
    <p>Address: @Model.ShippingAddress</p>
    <p>City: @Model.ShippingCity</p>
    <p>County: @Model.ShippingCounty</p>
    <p>Postal Code: @Model.ShippingPostalCode</p>
    <p>Country: @Model.ShippingCountry</p>

    <h3>Order Items</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Book</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderItems)
            {
                <tr>
                    <td>@item.Book?.Title</td>
                    <td>$@item.Price</td>
                    <td>@item.Quantity</td>
                    <td>$@(item.Price * item.Quantity)</td>
                </tr>
            }
        </tbody>
    </table>
}
