@model List<dynamic> 

<div class="container">
    <h1 class="text-center mb-4">Welcome to BookStore</h1>

    @foreach (var genreGroup in Model)
    {
        <h2 class="mt-4">@genreGroup.Genre</h2> <!-- Genre Title -->
        <div class="row">
            @foreach (var book in genreGroup.Books)
            {
                <div class="col-md-3">
                    <div class="card shadow-sm">
                        <img src="@Url.Content(book.ImageUrl)" class="card-img-top" alt="@book.Title">
                        <div class="card-body text-center">
                            <h5 class="card-title">@book.Title</h5>
                            <p class="card-text"><strong>Price:</strong> $@book.Price</p>
                            <a asp-controller="Books" asp-action="Details" asp-route-id="@book.BookId" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
